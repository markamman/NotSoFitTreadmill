<Window x:Name="windowMain" x:Class="NotSoFitTreadmill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotSoFitTreadmill"
        mc:Ignorable="d"
        Title="iFit Treadmill" MinWidth="400" MinHeight="500" HorizontalAlignment="Center" VerticalAlignment="Top" MaxWidth="400" MaxHeight="500" d:DesignWidth="400" d:DesignHeight="500" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="400" Height="500">
    <Grid x:Name="gridMainWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="65"/>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonStartPause" Content="Start" HorizontalAlignment="Left" Height="25" Margin="27,11,0,0" VerticalAlignment="Top" Width="100" Click="buttonStartPause_Click" Grid.Row="4"/>
        <Grid x:Name="gridIncline" HorizontalAlignment="Center" Height="47" Margin="0" VerticalAlignment="Bottom" Width="355" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonIncline1" Content="1" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="buttonIncline_Click"/>
            <Button x:Name="buttonIncline2" Content="2" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="buttonIncline_Click" Grid.Column="1"/>
            <Button x:Name="buttonIncline3" Content="3" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="2"/>
            <Button x:Name="buttonIncline4" Content="4" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="3"/>
            <Button x:Name="buttonIncline5" Content="5" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="4"/>
            <Button x:Name="buttonIncline6" Content="6" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="5"/>
            <Button x:Name="buttonIncline7" Content="7" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="6"/>
            <Button x:Name="buttonIncline8" Content="8" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="7"/>
            <Button x:Name="buttonIncline9" Content="9" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="8"/>
            <Button x:Name="buttonIncline10" Content="10" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="9"/>
            <Button x:Name="buttonIncline11" Content="11" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonIncline_Click" Grid.Column="10"/>
            <Button x:Name="buttonIncline12" Content="12" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="buttonIncline_Click" Grid.Column="11"/>
            <Button x:Name="buttonInclineDown" Content="-" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="ButtonInclineDown_Click" Grid.Column="12"/>
            <Button x:Name="buttonInclineUp" Content="+" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="ButtonInclineUp_Click" Grid.Column="13"/>
        </Grid>
        <Label x:Name="labelInclineTitle" Content="Incline (% grade)" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.27,0.436" Margin="0,8,0,0" Width="98" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Grid x:Name="gridSpeed" HorizontalAlignment="Center" Height="47" Margin="0" VerticalAlignment="Bottom" Width="355" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonSpeed1" Content="1" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="buttonSpeed_Click"/>
            <Button x:Name="buttonSpeed2" Content="2" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="buttonSpeed_Click" Grid.Column="1"/>
            <Button x:Name="buttonSpeed3" Content="3" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="2"/>
            <Button x:Name="buttonSpeed4" Content="4" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="3"/>
            <Button x:Name="buttonSpeed5" Content="5" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="4"/>
            <Button x:Name="buttonSpeed6" Content="6" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="5"/>
            <Button x:Name="buttonSpeed7" Content="7" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="6"/>
            <Button x:Name="buttonSpeed8" Content="8" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="7"/>
            <Button x:Name="buttonSpeed9" Content="9" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="8"/>
            <Button x:Name="buttonSpeed10" Content="10" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" IsCancel="True" Click="buttonSpeed_Click" Grid.Column="9"/>
            <Button x:Name="buttonSpeedDown" Content="-" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="ButtonSpeedDown_Click" Grid.Column="10"/>
            <Button x:Name="buttonSpeedUp" Content="+" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="20" RenderTransformOrigin="0.5,0.5" Click="ButtonSpeedUp_Click" Grid.Column="11"/>
        </Grid>
        <Label x:Name="labelSpeedTitle" Content="Speed (mph)  Treadmill must be running to set speed." HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.27,0.436" Margin="0,8,0,0" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="2"/>
        <Grid x:Name="gridStatistics" HorizontalAlignment="Center" Height="66" Margin="0,10,0,4" VerticalAlignment="Center" Width="392">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="labelInclineTitle1" Content="Incline (% grade):" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Center" Width="110" HorizontalContentAlignment="Right"/>
            <Label x:Name="labelSpeedTitle1" Content="Speed (mph):" HorizontalAlignment="Right" Margin="0,0,-1,0" Grid.Row="1" VerticalAlignment="Center"/>
            <Label x:Name="labelTimeTitle" Content="Time (hh:mm:ss):" Grid.Column="2" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Center"/>
            <Label x:Name="labelDistanceTitle" Content="Distance (miles):" Grid.Column="2" HorizontalAlignment="Right" Margin="0" Grid.Row="1" VerticalAlignment="Center"/>
            <Label x:Name="labelInclineValue" Content="00.0" Grid.Column="1" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Red" Width="75" VerticalContentAlignment="Center"/>
            <Label x:Name="labelSpeedValue" Content="00.0" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="1" VerticalAlignment="Center" Foreground="Red" FontSize="20" FontWeight="Bold" Width="75" VerticalContentAlignment="Center"/>
            <Label x:Name="labelTimeValue" Content="00:00:00" Grid.Column="3" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Center" Foreground="Red" FontSize="20" FontWeight="Bold"/>
            <Label x:Name="labelDistanceValue" Content="00.00" Grid.Column="3" HorizontalAlignment="Left" Margin="0" Grid.Row="1" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="Red"/>
        </Grid>
        <Button x:Name="buttonResetStats" HorizontalAlignment="Right" Height="25" Margin="0,11,28,0" VerticalAlignment="Top" Width="100" Grid.Row="4" Click="ButtonResetStats_Click" Content="Reset Stats"/>
        <Separator HorizontalAlignment="Left" Height="10" Margin="0,76,0,0" VerticalAlignment="Top" Width="492" Background="#FFC7C7C7" Grid.RowSpan="2"/>
        <Separator HorizontalAlignment="Left" Height="10" Margin="0,61,0,0" VerticalAlignment="Top" Width="492" Background="#FFC7C7C7" Grid.Row="2" Grid.RowSpan="2"/>
        <ComboBox x:Name="comboBoxMode" HorizontalAlignment="Left" Height="25" Margin="20,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="100" SelectedIndex="0" VerticalContentAlignment="Center" Padding="10,3,4,3">
            <ComboBoxItem Content="Manual"/>
            <ComboBoxItem Content="Run workout"/>
        </ComboBox>
        <Label x:Name="labelMode" Content="Mode:" HorizontalAlignment="Left" Margin="20,5,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.IsSharedSizeScope="True"/>
        <Label x:Name="labelSelectedWorkout" Content="Selected workout:" HorizontalAlignment="Left" Margin="150,5,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxSelectedWorkout" HorizontalAlignment="Left" Margin="150,0,0,10" Grid.Row="3" VerticalAlignment="Bottom" Width="215" Height="25" VerticalContentAlignment="Center" SelectedIndex="0" Padding="10,3,4,3">
            <ComboBoxItem Content="Default"/>
        </ComboBox>
        <Menu HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.836,1.821" Grid.Row="4" AllowDrop="True" Background="{x:Null}" Height="18"/>
        <Button x:Name="buttonDebug" Content="Debug" HorizontalAlignment="Left" Height="25" Margin="146,50,0,0" VerticalAlignment="Top" Width="100" Grid.Row="4" Click="ButtonDebug_Click"/>
        <Button x:Name="buttonStop" Content="Stop" HorizontalAlignment="Left" Height="25" Margin="146,11,0,0" VerticalAlignment="Top" Width="100" Grid.Row="4" Click="buttonStop_Click"/>

    </Grid>
</Window>
